<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Basic" parent="Widget.AppCompat.Button">
        <item name="android:background"> @drawable/background_button </item>
        <item name="android:paddingEnd" >40dp</item>
        <item name="android:paddingStart" >40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Button.Basic.Red" parent="Widget.AppCompat.Button">
        <item name="android:background"> @drawable/background_button_red </item>
        <item name="android:paddingEnd" >40dp</item>
        <item name="android:paddingStart" >40dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Password.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconDrawable">@drawable/selector_password_visible</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/pind_green</item>
    </style>
    <style name="AppTheme.DialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="dialogCornerRadius">15dp</item>
    </style>
</resources>